# Copy to .env and customize per environment

# Database & Cache
DATABASE_URL=postgresql://user:pass@localhost:5432/ai_chat_manager
REDIS_URL=redis://localhost:6379/0

# Model Runtime
EMBEDDING_MODEL=BAAI/bge-m3
RERANKER_MODEL=BAAI/bge-reranker-v2-m3
CHAT_MODEL=llama3.1:70b
CODE_MODEL=codellama:34b

# Correlation & Search Tuning
CORRELATION_THRESHOLD=0.7
SEMANTIC_THRESHOLD=0.8
TEMPORAL_WINDOW_DAYS=30
MAX_BATCH_SIZE=32
WORKER_CONCURRENCY=6
CACHE_SIZE_MB=1024

# Network & Security
# Optional bearer token when exposing API beyond localhost
API_KEY=
BIND_ADDRESS=127.0.0.1
CORS_ORIGINS=

# Feature Flags
ENABLE_WEBHOOKS=false
ENABLE_REWEAVE_SCHEDULER=true
BACKUP_ENABLED=true

# General Runtime
APP_ENV=development
